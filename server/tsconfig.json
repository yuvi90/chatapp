{
  "compilerOptions": {
    /* Modules Config */
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",

    /* Rules */
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,

    /* Paths Alias */
    "typeRoots": ["node_modules/@types", "src/@types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@config": ["src/config"]
    },
    "plugins": [{ "transform": "typescript-transform-paths" }]
  },

  /* Files to Include */
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
